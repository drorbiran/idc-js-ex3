<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Events</title>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <link rel="stylesheet" href="/public/style.css">

</head>
<body bgcolor=#f5f7f2>
[
<!--#bce0d6-->
<h1 align="center" style="color:#8eb2a8" class="title">IDCFood</h1>

<div class="allContainers">
    <!-- add event form -->
    <div class="container">
        <form action="/item/" method="post">
            <div class="wideField">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" name="name" type="text">
                    <label class="mdl-textfield__label" for="name">Event name</label>
                </div>
            </div>
            <div class="thinField">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" name="location" type="text">
                    <label class="mdl-textfield__label" for="location">Where?</label>
                </div>
            </div>
            <div class="wideField">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" name="food" type="text">
                    <label class="mdl-textfield__label" for="food">What kind of food?</label>
                </div>
            </div>
            <div class="wideField">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" name="img" type="text">
                    <label class="mdl-textfield__label" for="img">Add and image url</label>
                </div>
            </div>

            <div class="addBtn">
                <button class="addBtn mdl-button mdl-js-button mdl-button--raised">
                    Add Event
                </button>
            </div>
        </form>
    </div>

    <div class="rightContainer">
        <div class="tableContainer">
           <table class="tableSize mdl-data-table mdl-js-data-table mdl-shadow--1dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">Event name</th>
                    <th class="mdl-data-table__cell--non-numeric">Time</th>
                    <th class="mdl-data-table__cell--non-numeric">Location</th>
                    <th class="mdl-data-table__cell--non-numeric">Food Type</th>
                    <th class="mdl-data-table__cell--non-numeric">Image</th>
                    <th class="mdl-data-table__cell--non-numeric"></th>
                </tr>
                </thead>
                <tbody>
                <% events.forEach(function(event){ %>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.name %></td>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.time %></td>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.location %></td>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.food %></td>
                    <td class="mdl-data-table__cell--non-numeric">
                        <a href="<%= event.img %>"
                           class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored">
                            <i class="material-icons md-dark">image</i>
                        </a>
                    </td>
                    <td>
                        <i class="material-icons md-dark">mode_edit</i>
                        <i id="<%= event.id%>" class="material-icons md-dark delete">delete</i>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>

        <% events.forEach(function(event){ %>
        <div class="gallery">
            <a target="_blank" href="<%= event.img %>">
                <img src="<%= event.img %>" width="300" height="200">
            </a>
            <div class="desc"><%= event.name %></div>
        </div>
        <% }); %>

    </div>

</div>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300" rel="stylesheet">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-blue.min.css"/>
<script type="text/javascript" src="/views/material.min.css"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<script type="text/javascript" src="/public/script.js"></script>
</body>
</html>
