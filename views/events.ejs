<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Events</title>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

</head>
<body bgcolor=#f5f7f2>

<style type="text/css">

    .title {
        font-family: 'Roboto Mono', monospace;
        size: 100px;
    }

    .allContainers {
        display: flex;
        margin-left: 3%;
        margin-right: 3%;
    }

    .container {
        clear: both;
        display: block;
        margin-top: 0%;
        margin-right: 25%;
        width: 0%;
        align-content: center;
        font-family: 'Roboto Mono', monospace;
    }

    .thinField {
        width: 120px;
    }

    .wideField {
        width: 200px;
    }

    .rightContainer {
        clear: both;
        display: block;
        margin-left: -4%;
        width: 56%;
        font-family: 'Roboto Mono', monospace;
        font-size: small;
    }

    .tableContainer {
        margin-bottom: 5%;
        font-size: 10px;
    }

    .tableSize {
        font-size: small;
    }

    .addBtn {
        width: 120px;
    }

    .deleteBtn {
        width: 250px;
        margin-bottom: 10px;
        margin-left: 100%;
        align-items: auto;
    }

    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 150px;
    }

    div.gallery:hover {
        border: 1px solid #777;
    }

    div.gallery img {
        width: 150px;
        height: 100px;
    }

    div.desc {
        padding: 3px;
        text-align: center;
        color: #00bfa5;
    }

</style>

<!--#bce0d6-->
<h1 align="center" style="color:#8eb2a8" class="title">IDCFood</h1>

<div class="allContainers">

    <span class="container">
        <form action="/item/" method="post">

        <div class="wideField">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" name="name" type="text">
                <label class="mdl-textfield__label" for="name">Event name</label>
            </div>
        </div>

        <div class="thinField">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" name="location" type="text">
                <label class="mdl-textfield__label" for="location">Where?</label>
            </div>
        </div>
        <div class="wideField">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" name="food" type="text">
                <label class="mdl-textfield__label" for="food">What kind of food?</label>
            </div>
        </div>
        <div class="wideField">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" name="img" type="text">
                <label class="mdl-textfield__label" for="img">Add and image url</label>
            </div>
        </div>

        <div class="addBtn">
            <button class="addBtn mdl-button mdl-js-button mdl-button--raised">
            Add Event
            </button>
        </div>

    </form>
    </span>

    <span class="rightContainer">

        <div class="deleteBtn">
            <button class="mdl-button mdl-js-button mdl-button--raised">
            Delete selected events
            </button>
        </div>

        <div class="tableContainer">
           <table class="tableSize mdl-data-table mdl-js-data-table mdl-shadow--1dp mdl-data-table--selectable">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">Event name</th>
                    <th class="mdl-data-table__cell--non-numeric">Time</th>
                    <th class="mdl-data-table__cell--non-numeric">Location</th>
                    <th class="mdl-data-table__cell--non-numeric">Food Type</th>
                    <th class="mdl-data-table__cell--non-numeric">Image</th>
                </tr>
                </thead>
                <tbody>
                <% events.forEach(function(event){ %>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.name %></td>
                    <td class ="mdl-data-table__cell--non-numeric"><%= event.time %></td>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.location %></td>
                    <td class="mdl-data-table__cell--non-numeric"><%= event.food %></td>
                    <td class="mdl-data-table__cell--non-numeric">
                        <a href="<%= event.img %>" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored">
                            <i class="material-icons md-light">image</i>
                        </a>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>

        <% events.forEach(function(event){ %>
        <div class="gallery">
            <a target="_blank" href="<%= event.img %>">
                <img src="<%= event.img %>" width="300" height="200">
            </a>
            <div class="desc"><%= event.name %></div>
        </div>
        <% }); %>

    </span>

</div>


<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300" rel="stylesheet">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-blue.min.css"/>
<script type="text/javascript" src="/views/material.min.css"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

<script type="text/javascript" src="/public/script.js"></script>
</body>
</html>
